if Template.subscriptionsReady
  .ui.basic.segment
    with update
      .ui.link.items
        a.item(href='/u/#{user.username}')
          .ui.tiny.image
            img(src='{{gravatar user.email}}')
          .middle.aligned.content
            .header= user.username
            .description.grey on {{timestamp createdAt}}
    
      h1#single-update-content= content
else
  +spinner
